generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  relationMode      = "prisma"
}

model Author {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  post        Post[]
}

model Post {
  id          String    @id @default(cuid())
  title       String
  content     String
  authorId    String
  author      Author    @relation(fields: [authorId], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
